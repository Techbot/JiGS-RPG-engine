	<version>7.4.5</version>
	<description>battle the ultimate mailing system for Joomla CMS.</description>

	<install>
		<sql>
			<file driver="mysql">tables.sql</file>
			<file charset="utf8" driver="mysql">tables.sql</file>
		</sql>
	</install>

	<installfile>install.jnews.php</installfile>
	<uninstallfile>uninstall.jnews.php</uninstallfile>

	<files folder="site">
		<folder>css</folder>
		<folder>images</folder>
		<folder>includes</folder>
		<folder>modules</folder>
		<folder>params</folder>
		<folder>templates</folder>
		<folder>upload</folder>
		<folder>views</folder>
		<filename>jnews.php</filename>
		<filename>jnews.html.php</filename>
		<filename>defines.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
		<filename>sef_ext.php</filename>
	</files>

	<administration>
		<files folder="admin">
			<folder>backup</folder>
			<folder>extensions</folder>
			<folder>classes</folder>
			<folder>buttons</folder>
			<folder>controllers</folder>
			<folder>cssadmin</folder>
			<folder>droplist</folder>
			<folder>images</folder>
			<folder>language</folder>
			<folder>params</folder>
			<folder>plugins</folder>
			<folder>templates</folder>
			<folder>views</folder>
			<filename>admin.jnews.php</filename>
			<filename>admin.jnews.html.php</filename>
			<filename>compa.php</filename>
			<filename>tables.sql</filename>
			<filename>dwntemplates.sql</filename>
			<filename>simplicitytemplate.sql</filename>
			<filename>index.html</filename>
			<filename>toolbar.jnews.html.php</filename>
			<filename>toolbar.jnews.php</filename>
			<filename>update.jnews.php</filename>
		</files>

		<menu img="../administrator/components/com_jnews/images/16/jnewsletter_icon.png" link="option=com_battle">Battle</menu>
		<submenu>
			<menu link="option=com_battle&amp;act=list" img="../administrator/components/com_jnews/images/16/lists.png">Lists</menu>
			<menu link="option=com_battle&amp;act=subscribers" img="../administrator/components/com_jnews/images/16/subscribers.png">Subscribers</menu>
