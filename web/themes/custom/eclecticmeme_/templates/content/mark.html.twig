{#
/**
 * @file
 * Theme override for a marker for new or updated content.
 *
 * Available variables:
 * - status: Number representing the marker status to display. Use the constants
 *   below for comparison:
 *   - MARK_NEW
 *   - MARK_UPDATED
 *   - MARK_READ
 */
#}
{% if logged_in %}
  {% if status is constant('MARK_NEW') %}
    {% include "@eclecticmeme/components/highlight-mark.twig" with {content: 'New'|t} only %}
  {% elseif status is constant('MARK_UPDATED') %}
    {% include "@eclecticmeme/components/highlight-mark.twig" with {content: 'Updated'|t} only %}
  {% endif %}
{% endif %}
